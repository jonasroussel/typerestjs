{
	"include": ["src"],
	"compilerOptions": {
		// Module
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,

		// Output
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"@controllers/*": ["src/controllers/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@models/*": ["src/models/*"],
			"@plugins/*": ["src/plugins/*"],
			"@routes/*": ["src/routes/*"],
			"@schemas/*": ["src/schemas/*"],
			"@services/*": ["src/services/*"],
			"@tools/*": ["src/tools/*"]
		},
		"target": "ES6",
		"declaration": false,
		"sourceMap": true,

		// Lint
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		// Optimization
		"skipLibCheck": true
	}
}
