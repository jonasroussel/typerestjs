{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		// Base options (for library)
		"outDir": "./lib",
		"esModuleInterop": true,
		"moduleDetection": "force",
		"declaration": true,
		"sourceMap": false,

		// Node options
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		// Optimization
		"skipLibCheck": true,

		// Strictness
		"strict": true,
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	}
}
